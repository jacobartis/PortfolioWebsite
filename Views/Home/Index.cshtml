@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="intro">
    <div class="into-content">
        <h1>Hi, my name is Jacob.</h1>
        <p>I'm a passionate graduate developer <br> dedicated to creating cool software!</p>
    </div>
    <img src="jacob-img.jpg" alt="Picture of me.">
</div>
<div class="about-me">
    <h1>Who am I?</h1>
    <p>I am a recent computer science graduate from Royal Holloway with specialisation in artificial inteligence (AI). 
        I've got a burrning passion for all things computers and lo.</p>
</div>

<div>
    <h1>What I've worked on?</h1>
    <div class="projects">
        <button class="project-button" type="button" onclick="location.href='@Url.Action("GoFish","Projects")'"/>
            <h1 class="project-title">GoFish</h1>
            <div class=project-content>
                <div class="project-img">
                    <img src="GoFish.jpg" alt="GoFish project img">
                </div>
                <p class="project-text"><b>Third place winning hackathon project</b>, discord bot for looking after fish.</p>
            </div>
        </button>

        <button class="project-button" type="button" onclick="location.href='@Url.Action("TimeAttack","Projects")'"/>
            <h1 class="project-title">Time Attack</h1>
            <div class=project-content>
                <div class="project-img">
                    <img src="TimeAttack.png" alt="TimeAttack project img">
                </div>
                <p class="project-text"><b>Final year project</b>, roguelike topdown shooter.</p>
            </div>
        </button>
        <button class="project-button" type="button" onclick="location.href='@Url.Action("CADLanguage","Projects")'"/>
            <h1 class="project-title">3D CAD Language</h1>
            <div class=project-content>
                <p class="project-text"><b>Programming langauge for 3D CAD.</b></p>
            </div>
        </button>
    </div>
</div>

<div class="plans">
    <h1>What I'm doing next</h1>
</div>
<div class="contact-info">
    <h1>Get in touch</h1>
    
</div>


<script src="~/js/index.js" asp-append-version="true"></script>